From 793b6901de2478d0d457a5950008fdc65c0a36e9 Mon Sep 17 00:00:00 2001
From: Arik Nemtsov <arik@wizery.com>
Date: Tue, 24 Jul 2012 16:30:34 +0300
Subject: [PATCH 3/3] hostapd: make reserved socket name wlan1 for hostapd

Change-Id: I1e3cec0dad6307b7ac13dc54234acb73bfa23eaa
Signed-off-by: Arik Nemtsov <arik@wizery.com>
---
 BoardConfig.mk          |    4 ++--
 init.omap4blazeboard.rc |    4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/BoardConfig.mk b/BoardConfig.mk
index 2a14840..116e646 100644
--- a/BoardConfig.mk
+++ b/BoardConfig.mk
@@ -74,9 +74,9 @@ USES_TI_MAC80211 := true
 ifdef USES_TI_MAC80211
 BOARD_WPA_SUPPLICANT_DRIVER      := NL80211
 WPA_SUPPLICANT_VERSION           := VER_0_8_X
-BOARD_WPA_SUPPLICANT_PRIVATE_LIB := lib_driver_cmd_wl12xx
+BOARD_WPA_SUPPLICANT_PRIVATE_LIB :=
 BOARD_HOSTAPD_DRIVER             := NL80211
-BOARD_HOSTAPD_PRIVATE_LIB        := lib_driver_cmd_wl12xx
+BOARD_HOSTAPD_PRIVATE_LIB        :=
 BOARD_WLAN_DEVICE                := wl12xx_mac80211
 BOARD_SOFTAP_DEVICE              := wl12xx_mac80211
 WIFI_DRIVER_MODULE_PATH          := "/system/lib/modules/wl12xx_sdio.ko"
diff --git a/init.omap4blazeboard.rc b/init.omap4blazeboard.rc
index 1f4a82b..5484da8 100755
--- a/init.omap4blazeboard.rc
+++ b/init.omap4blazeboard.rc
@@ -209,7 +209,7 @@ service sdcard /system/bin/sdcard /data/media 1023 1023
 
 service p2p_supplicant /system/bin/wpa_supplicant \
 	-iwlan0 -Dnl80211 -c/data/misc/wifi/wpa_supplicant.conf -N \
-	-ip2p0 -Dnl80211 -c/data/misc/wifi/p2p_supplicant.conf
+	-ip2p0 -Dnl80211 -c/data/misc/wifi/p2p_supplicant.conf -d
 	class main
 	socket wpa_wlan0 dgram 660 wifi wifi
 	disabled
@@ -258,7 +258,7 @@ service iprenew_bnep0 /system/bin/dhcpcd -n
 	oneshot
 
 service hostapd_bin /system/bin/hostapd -d /data/misc/wifi/hostapd.conf
-	socket wpa_wlan0 dgram 660 wifi wifi
+	socket wpa_wlan1 dgram 660 wifi wifi
 	class main
 	disabled
 	oneshot
-- 
